root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.el]
indent_size = 2

[*.sh]
indent_size = 2

[*.pug]
indent_size = 2

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
