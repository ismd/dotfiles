#!/usr/bin/env bash

# hash: {{ include "etc/nftables.conf" | sha256sum }}

set -euo pipefail

CHEZMOI_SOURCE="${HOME}/.local/share/chezmoi"
NFTABLES_CONF="${CHEZMOI_SOURCE}/etc/nftables.conf"

if [[ -f "$NFTABLES_CONF" ]]; then
    echo "Installing nftables.conf to /etc/..."
    sudo cp "$NFTABLES_CONF" /etc/nftables.conf
fi
